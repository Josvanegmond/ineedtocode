<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="4" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="Hardcore mode" />

    <CheckBox
        android:id="@+id/CheckBox01"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="Very important" />

    <CheckBox
        android:id="@+id/CheckBox02"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="High priority" />

    <CheckBox
        android:id="@+id/CheckBox03"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="No early finish" />

    <CheckBox
        android:id="@+id/CheckBox04"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="Another option" />

    <CheckBox
        android:id="@+id/CheckBox05"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="Allow skipping" />

</GridLayout>